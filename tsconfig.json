{
	"compileOnSave": true,
	"compilerOptions": {
		"alwaysStrict": true,
		"lib": ["esnext"],
		"module": "CommonJS",
		"noUnusedParameters": true,
        "sourceMap": true,
        "declarationMap": true,
		"declaration": true,
		"noUnusedLocals": true,
		"removeComments": false,
        "esModuleInterop": true,
		"target": "ES2022",
		"strictNullChecks": true,
		"preserveConstEnums": true,
		"exactOptionalPropertyTypes": true,
        "skipLibCheck": true
	},
	"include": [
		"2019/**/*.ts",
		"2022/**/*.ts",
		"2025/**/*.ts",
        "types/**/*.ts"
    ],
    "exclude": ["/node_modules"],
}